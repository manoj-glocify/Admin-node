{
  "info": {
    "name": "Admin API",
    "description": "API collection for Admin Template",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "v1",
      "description": "API Version 1",
      "item": [
        {
          "name": "Authentication",
          "item": [
            {
              "name": "Register",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/auth/register",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "register"]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\",\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\"\n}"
                }
              }
            },
            {
              "name": "Login",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/auth/login",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "login"]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"password123\"\n}"
                }
              }
            },
            {
              "name": "Google Login",
              "request": {
                "method": "GET",
                "url": {
                  "raw": "{{base_url}}/auth/google",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "google"]
                }
              }
            },
            {
              "name": "Logout",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/auth/logout",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "logout"]
                }
              }
            }
          ]
        },
        {
          "name": "Roles",
          "item": [
            {
              "name": "Get All Roles",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/roles",
                  "host": ["{{base_url}}"],
                  "path": ["roles"]
                }
              }
            },
            {
              "name": "Create Role",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/roles",
                  "host": ["{{base_url}}"],
                  "path": ["roles"]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"name\": \"Admin\",\n    \"description\": \"Administrator role\",\n    \"permissions\": [\n        {\n            \"module\": \"users\",\n            \"actions\": [\"create\", \"read\", \"update\", \"delete\"]\n        }\n    ]\n}"
                }
              }
            },
            {
              "name": "Get Role by ID",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/roles/:id",
                  "host": ["{{base_url}}"],
                  "path": ["roles", ":id"],
                  "variable": [
                    {
                      "key": "id",
                      "value": "1"
                    }
                  ]
                }
              }
            },
            {
              "name": "Update Role",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/roles/:id",
                  "host": ["{{base_url}}"],
                  "path": ["roles", ":id"],
                  "variable": [
                    {
                      "key": "id",
                      "value": "1"
                    }
                  ]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"name\": \"Updated Role\",\n    \"description\": \"Updated description\",\n    \"permissions\": [\n        {\n            \"module\": \"users\",\n            \"actions\": [\"read\"]\n        }\n    ]\n}"
                }
              }
            },
            {
              "name": "Delete Role",
              "request": {
                "method": "DELETE",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/roles/:id",
                  "host": ["{{base_url}}"],
                  "path": ["roles", ":id"],
                  "variable": [
                    {
                      "key": "id",
                      "value": "1"
                    }
                  ]
                }
              }
            }
          ]
        },
        {
          "name": "Profile",
          "item": [
            {
              "name": "Get Profile",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/profile",
                  "host": ["{{base_url}}"],
                  "path": ["profile"]
                }
              }
            },
            {
              "name": "Update Profile",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/profile",
                  "host": ["{{base_url}}"],
                  "path": ["profile"]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"firstName\": \"Updated\",\n    \"lastName\": \"Name\",\n    \"email\": \"updated@example.com\"\n}"
                }
              }
            },
            {
              "name": "Change Password",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "url": {
                  "raw": "{{base_url}}/profile/change-password",
                  "host": ["{{base_url}}"],
                  "path": ["profile", "change-password"]
                },
                "body": {
                  "mode": "raw",
                  "raw": "{\n    \"currentPassword\": \"oldpassword\",\n    \"newPassword\": \"newpassword\"\n}"
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "token",
      "value": "your-jwt-token-here"
    }
  ]
} 