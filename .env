# Application Configuration
APP_NAME=Admin Node Template
APP_VERSION=1.0.0
APP_DESCRIPTION=Modular Admin Template with Authentication and Authorization
APP_LOGO_URL=/assets/logo.png
APP_FAVICON_URL=/assets/favicon.ico
APP_PRIMARY_COLOR=#4F46E5
APP_SECONDARY_COLOR=#10B981

# Server Configuration
PORT=3000
NODE_ENV=development
API_PREFIX=/api
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/admin_template?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Feature Flags
ENABLE_GOOGLE_LOGIN=true
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true

# Email Configuration (if needed)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@example.com

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log
ERROR_LOG_FILE_PATH=logs/error.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100